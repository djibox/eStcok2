@model IEnumerable<eStock2.Models.Produit>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-success">Vous avez @ViewBag.NombreProduits Produits</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table table-bordered">
    <tr>
        <th>
            Fournisseur
        </th>
        <th>
            Produit
        </th>
        <th>
            Prix de vente
        </th>
        <th>
            Quantite en stock
        </th>
        <th>
            Date de Creation
        </th>
        <th>
            Date d'expiration
        </th>
        <th>Actions</th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Fournisseur.Designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Designation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Prix)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantite)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateCreation)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.DateExpiration)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
            @Html.ActionLink("Details", "Details", new { id=item.Id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.Id })
        </td>
    </tr>
}

</table>
