@model IEnumerable<eStock2.Models.Produit>

@{
    ViewBag.Title = "Index";
}

<h2 class="alert alert-success">Vous avez @ViewBag.NombreProduits Produits</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@using (Html.BeginForm())
{
    <p>
        Recherche de produit(s) qui contient le terme : @Html.TextBox("SearchTerm")
        <input type="submit" value="Rechercher" class="btn btn-danger" />
    </p>
}

<table class="table table-bordered table-hover table-responsive">
    <tr>

        <th>
            Produit
        </th>
        <th>
            Prix de vente
        </th>
        <th>
            Quantite en stock
        </th>
        <th>
            Date de Creation
        </th>
        <th>
            Date d'expiration
        </th>
        <th>
            Fournisseur
        </th>
        <th>Actions</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>

            <td>
                @Html.DisplayFor(modelItem => item.Designation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Prix)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantite)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateCreation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DateExpiration)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Fournisseur.Designation)
            </td>
            <td>
                <div class="dropup">
                    <button class="btn btn-default dropdown-toggle" type="button" id="dropdownMenu2" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        Paramétre
                        <span class="caret"></span>
                    </button>
                    <ul class="dropdown-menu" aria-labelledby="dropdownMenu2">
                        <li>
                            @Html.ActionLink("Edit", "Edit", new { id = item.Id })
                        </li>
                        <li role="separator" class="divider"></li>

                        <li>
                            @Html.ActionLink("Details", "Details", new { id = item.Id })
                        </li>
                        <li role="separator" class="divider"></li>

                        <li>
                            @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                        </li>
                        <li role="separator" class="divider"></li>
                    </ul>
                </div>
            </td>
        </tr>
    }

</table>
<p class="alert"> Nombre d'enregistrements trouvés : @ViewBag.NbProduits</p>